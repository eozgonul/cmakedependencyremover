<Window x:Class="CmakeDependencyRemover.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CmakeDependencyRemover.UI"
        xmlns:local2="clr-namespace:CmakeDependencyRemover.UI.UIControls"
        mc:Ignorable="d"
        Title="CMake Dependency Remover" Height="350" Width="525">
    <Grid>
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem x:Name="mi_File" Header="File" Height="20" Width="67">
                <MenuItem x:Name="mi_LoadSolution" Header="LoadSolution"/>
                <MenuItem x:Name="mi_Exit" Header="Exit"/>
            </MenuItem>
        </Menu>
        <TreeView x:Name="tv_SolutionFiles" HorizontalAlignment="Left" Width="146" Margin="0,20,0,0"/>
        <local2:MainTabControl x:Name="tc_FileContents" Margin="151,20,0,0"/>
    </Grid>
</Window>
