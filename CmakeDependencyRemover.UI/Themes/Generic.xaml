<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CmakeDependencyRemover.UI.UIControls">


    <Style TargetType="{x:Type local:MainTabControl}"
        BasedOn = "{StaticResource {x:Type TabControl}}">
    </Style>
    <Style TargetType="{x:Type local:MainTabControlItem}"
        BasedOn = "{StaticResource {x:Type TabItem}}">
    </Style>
    <Style TargetType="{x:Type local:DirectoryTreeViewItem}"
        BasedOn = "{StaticResource {x:Type TreeViewItem}}">
    </Style>
</ResourceDictionary>
